---
import Layout from '../layouts/Layout.astro'
---

<Layout title="Tailwind Exercises">
	<main class="w-full max-w-4xl m-auto p-4">
		<article>
			<header>
				<h2 class="inline-block text-3xl font-bold text-white bg-sky-500 mb-3 px-2">Buttons</h2>
			</header>
			<div>
				<section>
					<h3 class="text-2xl font-bold mb-2">Standard Buttons</h3>
					<div class="flex gap-4 px-2">
						<div class="flex flex-col items-center gap-1">
							<button class="px-4 py-2 bg-sky-400 hover:bg-sky-500 text-white text-base font-semibold rounded-md"
								type="button">
								Follow
							</button>
							<p class="font-bold text-sm text-gray-400">Primary</p>
						</div>
						<div class="flex flex-col items-center gap-1">
							<button class="px-4 py-2 bg-rose-500 hover:bg-rose-600 text-white text-base font-semibold rounded-md"
								type="button">
								Delete
							</button>
							<p class="font-bold text-sm text-gray-400">Danger</p>
						</div>
						<div class="flex flex-col items-center gap-1">
							<button class="px-4 py-2 bg-slate-400 hover:bg-slate-500 text-white text-base font-semibold rounded-md"
								type="button">
								Cancel
							</button>
							<p class="font-bold text-sm text-gray-400">Default</p>
						</div>
					</div>
				</section>
				<section>
					<h3 class="text-2xl font-bold mb-2">Outlined Buttons</h3>
					<div class="flex gap-4 px-2">
						<div class="flex flex-col items-center gap-1">
							<button class="px-4 py-2 outline -outline-offset-2 outline-sky-400 text-sky-400 text-base font-semibold rounded-md hover:bg-sky-400 hover:text-white"
								type="button">
								Follow
							</button>
							<p class="font-bold text-sm text-gray-400">Primary</p>
						</div>
						<div class="flex flex-col items-center gap-1">
							<button class="px-4 py-2 outline -outline-offset-2 outline-rose-500 text-rose-500 text-base font-semibold rounded-md hover:bg-rose-500 hover:text-white"
								type="button">
								Delete
							</button>
							<p class="font-bold text-sm text-gray-400">Danger</p>
						</div>
						<div class="flex flex-col items-center gap-1">
							<button class="px-4 py-2 outline -outline-offset-2 outline-slate-400 text-slate-400 text-base font-semibold rounded-md hover:bg-slate-400 hover:text-white"
								type="button">
								Cancel
							</button>
							<p class="font-bold text-sm text-gray-400">Default</p>
						</div>
					</div>
				</section>
			</div>
		</article>
	</main>
</Layout>
