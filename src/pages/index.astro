---
import Layout from '../layouts/Layout.astro'
import Button from '../components/Button'
import NamedComponent from '../components/NamedComponent'
---

<Layout title="Tailwind Exercises">
	<main class="w-full max-w-4xl m-auto p-4">
		<article class="pb-6">
			<header>
				<h2 class="inline-block text-3xl font-bold text-white bg-sky-500 mb-3 px-2">Buttons</h2>
			</header>
			<div>
				<section class="pb-2">
					<h3 class="text-2xl font-bold mb-2">Solid Buttons</h3>
					<div class="flex flex-wrap gap-4 p-2">
						<NamedComponent name="Primary">
							<Button btnStyle="primary">Follow</Button>
						</NamedComponent>
						<NamedComponent name="Danger">
							<Button btnStyle="danger">Delete</Button>
						</NamedComponent>
						<NamedComponent name="Default">
							<Button>Cancel</Button>
						</NamedComponent>
					</div>
				</section>
				<section>
					<h3 class="text-2xl font-bold mb-2">Outlined Buttons</h3>
					<div class="flex flex-wrap gap-4 px-2">
						<NamedComponent name="Primary">
							<Button btnStyle="primaryOutline">Follow</Button>
						</NamedComponent>
						<NamedComponent name="Danger">
							<Button btnStyle="dangerOutline">Delete</Button>
						</NamedComponent>
						<NamedComponent name="Default">
							<Button btnStyle="outline">Cancel</Button>
						</NamedComponent>
					</div>
				</section>
			</div>
		</article>
	</main>
</Layout>
